<div style="margin-top: 150px;"></div>
<div class="col-xs-12">
  <div class="box box-info">
    <div class="box-header with-border">
      <h3 class="box-title">Registration Flow</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <%= simple_form_for @user, url:  process_phone_number_registration_index_path, html: {class: "form-horizontal"} do |f| %>
      <div class="box-body">

        <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label">Name</label>

          <div class="col-sm-10">
            <%= f.input :name, placeholder: 'e.g Marcin', input_html: { class: 'form-control' }, wrapper: false, label: false, required: true %>

          </div>
        </div>


        <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label">Phone Number</label>

          <div class="col-sm-10">
            <%= f.input :phone, placeholder: 'e.g 123-123-1234', input_html: { class: 'form-control' }, wrapper: false, label: false, required: true %>

          </div>
        </div>
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'btn btn-default') %>
        <a href="<%= new_user_session_url %>" class="btn btn-default">Sign In</a>
        <button type="submit" class="btn btn-info pull-right">Next</button>
      </div>
    <% end %>
  </div>
</div>
