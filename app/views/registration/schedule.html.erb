<div style="margin-top: 150px;"></div>
<div class="col-xs-12">
  <section class="content-header">
    <h1>
      Hi, <%= current_user.name %><br>
      <small>Set Your Schedule?</small>
    </h1>
    <br>
  </section>
</div>

<div class="col-xs-12">
  <div class="box box-info">
    <div class="box-header with-border">
      <h3 class="box-title">Goals</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <%= simple_form_for :user, url: registration_path(@user), method: :patch, html: {class: "form-horizontal"} do |f| %>

      <%= f.input :next_path, :as => :hidden, :input_html => { :value => firends_registration_index_path } %>

      <div class="box-body">
        <div class="col-xs-12">

          <ul class="nav nav-stacked">
            <li>
              <%= f.input :schedule, as: :check_boxes, collection: User::WEEK_DAYS, required: false %>
            </li>
          </ul>
          <hr>
        </div>

        <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label">Exercise Time</label>
          <div class="col-xs-6">
            <%= f.input :default_exercise_time,  as: :string, placeholder: '', input_html: { class: 'form-control timepicker' }, wrapper: false, label: false, required: true %>

          </div>
        </div>
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        <a href="#" class="btn btn-default">back</a>
        <button type="submit" class="btn btn-info pull-right">Next</button>
      </div>
    <% end %>
  </div>
</div>

<% content_for :javascript do %>
  <script>
   $(function(){
     $('.timepicker').timepicker();
   })
  </script>
<% end %>
